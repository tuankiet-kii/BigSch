@model IEnumerable<BigSch.Models.Course>
@{
    ViewBag.Title = "Home Page";
    <link href="~/Content/StyleHomeIndex.css" rel="stylesheet" />
}

<div class=" row">
    <ul>
        @foreach(var course in Model)
            {
                <li>
                    <div class="date">
                        <div class="month">
                            @course.DateTime.ToString("MM")
                        </div>
                        <div class="day">
                            @course.DateTime.ToString("dd")
                        </div>
                    </div>
                    <div class="details">
                        <span class="lecturer">
                            @course.Lecturer.Name
                        </span>
                       <span class="category">
                           @course.CateGory.Name
                       </span>
                    </div> 
                </li>
            }
    </ul>
</div>